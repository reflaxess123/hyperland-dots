{
  "workbench.productIconTheme": "fluent-icons",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Maple Mono NF CN",
  "terminal.integrated.fontFamily": "Maple Mono NF CN",
  "editor.fontWeight": "500",
  "workbench.tree.renderIndentGuides": "none",
  "editor.stickyScroll.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "files.exclude": {
    "*/__*": true,
    "/.*": true,
  },
  "explorer.confirmDelete": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "workbench.iconTheme": "charmed-icons",
  "charmed-icons.hidesExplorerArrows": true,
  "git.autofetch": true,
  "RainbowBrackets.depreciation-notice": false,
  "editor.renderWhitespace": "none",
  "editor.mouseWheelZoom": true,
  "editor.occurrencesHighlight": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.selectionHighlight": false,
  "editor.guides.indentation": true,
  "workbench.activityBar.location": "top",
  "git.confirmSync": false,
  "security.workspace.trust.untrustedFiles": "open",
  "claudeCode.preferredLocation": "sidebar",
  "git.enableSmartCommit": true,
  "claudeCode.selectedModel": "opus",
  "explorer.confirmPasteNative": false,
  "explorer.compactFolders": false,
  "custom-ui-style.stylesheet": {
    ".monaco-workbench": "font-family: 'Maple Mono NF CN', monospace !important",
  },
  "http.systemCertificatesNode": true,
  // "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1.5,
  "terminal.external.windowsExec": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
  "workbench.panel.showLabels": false,
  "workbench.editor.tabSizing": "fit",
  "window.density.editorTabHeight": "compact",
  "breadcrumbs.enabled": false,
  "editor.fontSize": 20,
  "workbench.editor.editorActionsLocation": "hidden",
  "git.openRepositoryInParentFolders": "never",
  "security.promptForLocalFileProtocolHandling": false,
  "kilo-code.allowedCommands": ["git log", "git diff", "git show"],
  "kilo-code.deniedCommands": [],
  "workbench.colorTheme": "Gruvbox Dark Hard",
  //sudo chown -R $(whoami) '/opt/visual-studio-code/resources/app'
}
